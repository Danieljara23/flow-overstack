<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 ">
        <h1 class="text-center">POSTS</h1>
        <% @posts.each do |post| %>
          <h2><%= post.title %></h2>
          <p class="text-justify"><%= markdown(truncate(post.content, :length => 250)) %></p>
          <p><%= post.user.email %></p>
          <p><%= link_to 'View',post %></p>
          <% if user_signed_in?%>
          <p>
            <%= link_to 'Edit',edit_post_path(post) %>
            <%= link_to 'Remove',post, method: :delete,data: {confirm: 'Are you sure to delete this product?'} %>
          </p>
          <% end %>
        <% end %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <% if user_signed_in?%>
        <%= link_to "New_Post",new_post_path %>
      <% end %>
    </div>
  </div>
</div>
